
@model IEnumerable<Movie>

<h2>Movies Released in @ViewBag.Year</h2>

@if (Model.Count()>0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Movie Name</th>
                <th>Date of Release</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@movie.MovieName</td>
                    <td>@movie.DateOfRelease.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No movies released in @ViewBag.Year.</p>
}
